{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .table {border:solid black 2px;}
    .table td {border:solid 1px black;padding: 10px;}
    .indexpost td {margin: 10px;}
</style>

<div class="example-wrapper">
    <h1>Hello voici votre Blog</h1>
    <td><a href="{{ path('blog_post_new')}}">Cr√©e un nouveau post</a></td>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>

        {% for task in tasks %}

            <div class="indexpost">
                <tr>
                    <td>{{ task.title }}</td>
                    <td>{{ task.content|slice(0,30)}}</td>
                    <td><a href="{{ path('blog_post_show', {'id': task.id}) }}">En savoir plus ...</a></td>


                </tr>
            </div>
            
        {% else %}

            <tr>
                <td colspan="3">no records found</td>
            </tr>

        {% endfor %}
        
    </table>
</div>
{% endblock %}
