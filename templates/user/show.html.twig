{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

<style>
    .userpost {border: 1px solid black; margin: 4px; text-align: center;}
</style>
    <h1>Profile Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <h3>Posts :</h3>
        {% for post in user.blogPosts |slice(0, 10) %}
            <div class="userpost">
                <h2> {{ post.title}} </h2>
                <div>
                    <p>{{ post.content }}</p>
                </div>
            </div>
        {% endfor %}

    </div>
    <a href="{{ path('home') }}">Retour a la liste</a>

{% endblock %}
